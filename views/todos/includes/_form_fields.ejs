<div class="form-group">
    <label for="todo"></label>
    <input type="text" name="todo" placeholder="Enter Todo" id="todo" value="<%= todo.title %>" autofocus>
</div>
<div class="form-group">
    <label for="description"></label>
    <textarea name="description" placeholder="Enter Description" id="description"><%= todo.description %></textarea>
</div>
<button type="submit" class="submit-btn">
    <span>
        <svg class="icon icon-btn">
            <use xlink:href="/icons/solid.svg#<%= btnIcon %>"></use>
        </svg>
    </span>
    <span><%= btnTitle %></span>
</button>